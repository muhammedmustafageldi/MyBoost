<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/secondColor"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondColor"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/recyclerViewImageView"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:src="@drawable/book" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/recyclerViewImageView"
            android:fontFamily="@font/carter_one"
            android:gravity="center"
            android:text="Kürk mantolu madonna"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recyclerSummaryText"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/title_text_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/recyclerViewImageView"
            android:fontFamily="@font/carter_one"
            android:text="Romanda aşk, yalnızlık ve yabancılaşma temaları ağır basar. Genel olarak bir aşk romanı olarak görülse de aslında psikolojik tahliller eşliğinde bir insanın içinde yaşadığı topluma yabancılaşması ve yalnızlaşarak kendi kabuğuna çekilmesi vurgulanır."
            android:textSize="12dp"></TextView>

        <TextView
            android:id="@+id/recyclerPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerViewImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/pricesmall"
            android:drawablePadding="5dp"
            android:fontFamily="@font/carter_one"
            android:gravity="center"
            android:text="Fiyatı: 15"
            android:textSize="20dp"></TextView>

        <Button
            android:id="@+id/obtainBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerSummaryText"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/recyclerPriceText"
            android:background="@drawable/background_button"
            android:fontFamily="@font/carter_one"
            android:text="Alındı"
            android:textColor="@color/white"></Button>


        <ImageView
            android:id="@+id/deleteImageRequested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/title_text_view"
            android:src="@drawable/delete"></ImageView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>